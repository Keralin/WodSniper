# ===========================================
# WodSniper Environment Configuration
# ===========================================
# Copy this file to .env and customize values

# ---- Flask Settings ----
FLASK_APP=run.py
FLASK_ENV=production           # development | production
SECRET_KEY=change-me-to-a-secure-random-string
PORT=5000

# ---- PostgreSQL Database (Docker) ----
POSTGRES_USER=wodsniper
POSTGRES_PASSWORD=change-me-secure-password
POSTGRES_DB=wodsniper

# DATABASE_URL is auto-generated in docker-compose.yml
# Only set manually if using external database (e.g., Railway):
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# ---- FlareSolverr (Cloudflare Bypass) ----
# Auto-configured when using: docker compose --profile full up
# Set to empty to disable: FLARESOLVERR_URL=
FLARESOLVERR_URL=http://flaresolverr:8191/v1

# ---- Gunicorn (Production Server) ----
GUNICORN_WORKERS=2             # 2-4 Ã— CPU cores recommended
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=120           # Seconds before worker timeout

# ---- Email Notifications (Optional) ----
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=WodSniper <noreply@wodsniper.com>
